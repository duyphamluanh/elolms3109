{{!
    @template block_elo_remind_teacher_via_mail/navigation

    This template renders the main content area for the elo_reminder_users block.

    Example context (json):
    {}
}}
<!-- Nav tabs -->
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="block_elo_remind_teacher_via_mail-main-tab" data-toggle="tab" 
            href="#block_elo_remind_teacher_via_mail-main" role="tab" aria-controls="block_elo_remind_teacher_via_mail-main" aria-selected="true">
            {{#str}} teacherlist, block_elo_remind_teacher_via_mail {{/str}}
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="block_elo_remind_teacher_via_mail-history-tab" data-toggle="tab" 
        href="#block_elo_remind_teacher_via_mail-history" role="tab" aria-controls="block_elo_remind_teacher_via_mail-history" aria-selected="false">
            {{#str}} history, block_elo_remind_teacher_via_mail {{/str}}
        </a>
    </li>
</ul>
 <!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active mt-4" id="block_elo_remind_teacher_via_mail-main" role="tabpanel" aria-labelledby="block_elo_remind_teacher_via_mail-main-tab">
        {{> block_elo_remind_teacher_via_mail/table-teachers }}
    </div>
    <div class="tab-pane mt-4" id="block_elo_remind_teacher_via_mail-history" role="tabpanel" aria-labelledby="block_elo_remind_teacher_via_mail-history-tab">
        {{> block_elo_remind_teacher_via_mail/table-history }}
    </div>
</div>
