{{!
    @template block_elo_remind_teacher_via_mail/table-teachers-rows

    This template renders the main content area for the elo_remind_teacher_via_mail block.

    Example context (json):
    {}
}}
<tr>
    <td scope="col" class="text-center" >{{ stt }}</td>
    <td scope="col" class="">
        <p>{{#str}} fullname, block_elo_remind_teacher_via_mail {{/str}} : {{fullname}}</p>
        <p>{{#str}} email, block_elo_remind_teacher_via_mail {{/str}} : {{email}}</p>
    </td>
    <td scope="col" class="">
        <strong>{{#str}} courses, block_elo_remind_teacher_via_mail {{/str}} :</strong>
        {{#courseslist}}
            {{> block_elo_remind_teacher_via_mail/courses-list }}
        {{/courseslist}}
    </td>
    <td scope="col" class="text-center"><strong>{{total}}</strong></td>
    <td scope="col" class="text-center">
        <button type="button" class="btn btn-primary" {{#abletosendmail}}disabled{{/abletosendmail}} tid="{{teacherid}}" id="sendmail_{{teacherid}}">
            <i class="fa fa-spinner fa-spin hide"></i>{{#str}} mail, block_elo_remind_teacher_via_mail {{/str}}
        </button>
        <p id="latestSent_{{teacherid}}">{{#str}} latest_send_mail, block_elo_remind_teacher_via_mail {{/str}} : {{ maxtimecreated }}</p>
    </td>
</tr>